<div class="container">
  <div class= "row">
    <div class= "col-md-offset-0 col-md-4">
      <%= link_to "Home", root_path %> >
      <%= link_to @item.category.name, category_path(@item.category.id) %>
      > Items ID <%= @item.id %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-offset-0 col-md-3">
      <%= render "categories/catalog", { categories: @categories} %>
    </div>
    <div class="col-md-offset-0 col-md-9">
      <div class="row">
        <div class="col-md-offset-0 col-md-3">
          <img src="<%= @item.image_url %>"
            height="110px" width="86px">
        </div>
        <div class="col-md-offset-0 col-md-9">
          <div class="row">
            Item ID: <%= @item.id %>
          </div>
          <div class="row">
            Price: $<%= @item.price %>
          </div>
          <div class="row">
            Date: <%= @item.updated_at.strftime("%Y-%m-%d") %>
          </div>
        </div>
      </div>
      <div class="row description">
        <strong>Description</strong>:
        <br />
        <%= @item.description %>
      </div>
      <br />
      <div class="row">
        <% unless user_signed_in? && (current_user.role == User.role_users[:admin])%>
          <% if @item.stock > 0 %>
            <%= render "items/add_to_cart", {stock: @item.stock, item_id: @item.id,
              hidden_quantity: nil} %>
          <% else %>
            <div class="out_of_stock">
              Out of stock
            </div>
          <% end %>
        <% else %>
          Stock: <span class="out_of_stock"><%= @item.stock %></span>
        <% end %>
      </div>
      <div class="row">
        <%= render 'items/share'%>
      </div>
    </div>
  </div>
</div>
