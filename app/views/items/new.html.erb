<% content_for :head do %>
  <%= display_meta_tags site: 'Venshop', title: "New item" %>
  <%= display_meta_tags keywords: %w[venshop Venshop item amazon new] %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-offset-0 col-md-4">
      <%= link_to "Home", root_path%> > Posting Item
    </div>
  </div>
  <br />
  <div class="login">
    <% flash.each do |key, value| %>
       <div class="alert alert-danger"><%= value %></div>
    <% end %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-8 col-md-offset-5">
      <h1 style="text-align:auto"> Post New Item</h1>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <% if @item.errors.any? %>
        <div id="errors">
          <ul>
            <% @item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(:post_item, url: create_item_path, method: :post, html:{multipart: true}) do |f| %>
        <div class="field">
          <%= f.label :name_item%><br />
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :price%><br />
          <%= f.number_field :price, :step => "0.01", autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :stock%><br />
          <%= f.number_field :stock, min: 0, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :category%><br />
          <%= f.select :category, @categories.map{|cate| cate.name},
          autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :Picture %>
          <%= f.file_field :picture, class: 'form-control' %> <br/>
        </div>

        <div class="field">
          <%= f.label :description%><br />
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="actions">
          <br />
          <%= f.submit "Post", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
