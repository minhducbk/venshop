$("#quantity_<%= @item_id.to_s %>").attr("selected", <%= @quantity.to_i %>);
$("#subtotal").html("$<%= @subtotal.to_s %>");
$(".subtotal_quantity").attr("value", <%= @subtotal.to_f %>);
<% if get_cart_quantity(@cart) > 1 %>
  $("#count_items").html("<%= get_cart_quantity(@cart).to_s %> items");
<% else %>
  $("#count_items").html("1 item");
<% end %>
